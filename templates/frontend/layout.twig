{% extends 'base.twig' %}

 {% block stylesheets %}
         <link href="{{ app.request.basepath }}/css/EstiloFrontend.css" rel="stylesheet" type="text/css" />
 {% endblock %}  

{% block body %}
  <!-- Contenedor de toda la plantilla -->
  <div id="contenedor">
  <!-- Menú principal -->
    <div id="header"> 
    <!-- Contenedor para el logotipo -->
        <div id="logoArea"></div> 
        <!-- Contenedor para las opciones del menu -->
          <div id="navArea">
          <!-- Opciones de menu -->
            <ul id="nav">
              <a href="{{ path('portada') }}"><li>Inicio</li></a>
              <a href="#"><li>Fotos</li></a>
              <a href="#"><li>Sobre mí</li></a>
              <a href="{{ path('contacto') }}"><li>Contacto</li></a>
            </ul>  <!-- Opciones de menu -->
          </div>   <!-- Contenedor para las opciones del menu -->
      </div>       <!-- Menú principal --> 

   <!-- Contenedor para el contenido de las noticias -->   
  <article>
    {% block article %}{% endblock %}
  </article>

    <!-- Contenedor para login, últimas noticias, buscar articulos por meses, ... -->
    <aside>
      {% block aside %}
        <h2>Ultimas noticias</h2>
        {% for article in articles %}
           <div class="asideLinks">
              <a href="{{ path('posts', { 'id': article.id }) }}">{{ article.Title }}</a>
           </div>
        {% else %}
            <h1>Aún no hay artículos creados</h1>
        {% endfor %}
      {% endblock %}
    </aside>


    <!-- Contenedor para el footer -->
    <footer>
     <div id="navFooter">
       <ul id="ulFooter">
        <li>Copyright @2014 Antonio Jiménez</li>
          <a href="{{ path('ayuda') }}"><li>Ayuda</li></a>
        </ul>
     </div>
    </footer>

  </div> <!-- Contenedor de toda la plantilla -->  
{% endblock %}