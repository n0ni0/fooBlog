{% extends 'backend/layout.twig' %}

{% block title %}{% endblock %}

{% block id 'backend' %}
	

{% block article %}
	<a class="boton" title="Botón con HTM5 y CSS3" href="{{ path('nuevo-articulo') }}">Crear nuevo artículo</a>

   <table class="tabla">
            <thead>
                <tr>
                    <th>Id</th>
                    <th class="span3">Título</th>
                    <th>content</th>
                    <th class="span3">Fecha publicación</th>
                    <th class="span2">Acciones</th>
                </tr>
            </thead>

            <tbody>
             {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content | striptags | truncate(160) | raw }}</td>
                    <td>{{ article.created | date('d/m/Y H:M:s') }}</td>
                    <td>
                        <a href="{{ path('editPost', { 'id': article.id }) }}">
                            Editar
                        </a> | 
                        <a href="{{ path('deletePost', { 'id': article.id }) }}">
                            Borrar
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aún no hay artículos creados</td>
                </tr>
             {% endfor %}   
            </tbody>
        </table>
{% endblock %}
